<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_smile"
    tools:context=".SmileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Display"
        android:id="@+id/smileMessageTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:editable="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendTextButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNumbEditText"
        android:password="false"
        android:layout_below="@+id/randomMessageButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/sendTextButton"
        android:hint="Enter Number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Number"
        android:id="@+id/addNumberButton"
        android:layout_below="@+id/addNumbEditText"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize Message"
        android:id="@+id/randomMessageButton"
        android:layout_below="@+id/sendTextButton"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addMessageEditText"
        android:layout_below="@+id/addNumberButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/addNumberButton"
        android:hint="Add Message"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Message"
        android:id="@+id/addMessageButton"
        android:layout_below="@+id/addMessageEditText"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:id="@+id/allMessageTextView"
        android:layout_below="@+id/addMessageButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/addMessageButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Messages"
        android:id="@+id/showAllMessagesButton"
        android:layout_below="@+id/addMessageEditText"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
